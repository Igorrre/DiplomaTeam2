<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DiplomaTeam2 RegressionTest" thread-count="2" parallel="tests">
    <listeners>
        <listener class-name="utils.AnnotationTransformer"/>
        <listener class-name="utils.TestListener"/>
    </listeners>
    <test name="UI Tests">
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.AddMoneyUserTest"/>
            <class name="tests.ui.AllDeleteUserTest"/>
            <class name="tests.ui.BuyCarTest"/>
            <class name="tests.ui.CarTest"/>
            <class name="tests.ui.CreateUserTest"/>
            <class name="tests.ui.HouseTest"/>
            <class name="tests.ui.ReadAllUsersTest"/>
        </classes>
    </test>
    <test name="API Tests">
        <classes>
            <class name="tests.api.AuthorizationTest"/>
            <class name="tests.api.AddMoneyUserTest"/>
            <class name="tests.api.CarTest"/>
            <class name="tests.api.CreateUserTest"/>
            <class name="tests.api.HouseTest"/>
            <class name="tests.api.GetUserTest"/>
        </classes>
    </test>
    <test name="JDBC Tests">
        <classes>
            <class name="tests.jdbc.CarTest"/>
            <class name="tests.jdbc.UserTest"/>
            <class name="tests.jdbc.HouseTest"/>
        </classes>
    </test>
</suite>